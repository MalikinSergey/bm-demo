  line-height: 33px;
  text-align: center;
  margin-bottom: 16px

}

.premium-offer__price {
  color: $mint
  font-weight: bold;
  font-size: 48px;
  line-height: 65px;

}

.premium-offer__hint {
  font-size: 18px;
  line-height: 25px;
  text-align: center;

  color: #CFCFCF;
  margin-bottom: 16px
